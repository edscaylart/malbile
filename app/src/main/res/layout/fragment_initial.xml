<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/primaryBlue100"
             tools:context="br.scaylart.malbile.views.fragments.InitialFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="@dimen/splash_logo_diameter"
        android:layout_height="@dimen/splash_logo_diameter"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/initial_signin"
            style="@style/button_white_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_blue_style"
            android:text="Entrar"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/initial_signup"
            style="@style/button_white_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_blue_style"
            android:text="Registrar"
            android:textAllCaps="false"/>
    </LinearLayout>


</FrameLayout>
